<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forestsoftware.kands">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/kands"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kands"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.forestsoftware.kands.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity    android:name="com.forestsoftware.kands.AboutKAndS" android:parentActivityName="com.forestsoftware.kands.MainActivity"></activity>

        <activity    android:name="com.forestsoftware.kands.IndexFragment" android:parentActivityName="com.forestsoftware.kands.MainActivity"></activity>

        <activity
            android:name="com.forestsoftware.kands.SongDetailsFragment"
            android:parentActivityName="com.forestsoftware.kands.IndexFragment"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.forestsoftware.kands.FavouriteListFragment"
            android:parentActivityName="com.forestsoftware.kands.MainActivity"></activity>

        <activity    android:name="com.forestsoftware.kands.HomeFragment" android:parentActivityName="com.forestsoftware.kands.MainActivity"></activity>

        <activity    android:name="com.forestsoftware.kands.SettingsFragment" android:parentActivityName="com.forestsoftware.kands.MainActivity"></activity>

        <activity    android:name="com.forestsoftware.kands.Category" android:parentActivityName="com.forestsoftware.kands.MainActivity"></activity>

        <activity    android:name="com.forestsoftware.kands.SongDetailsFragmentCategory" android:parentActivityName="com.forestsoftware.kands.Category"></activity>

        <activity    android:name="com.forestsoftware.kands.FavouriteDisplaySong" android:parentActivityName="com.forestsoftware.kands.FavouriteListFragment"></activity>
        <activity    android:name="com.forestsoftware.kands.SearchActivity" android:parentActivityName="com.forestsoftware.kands.MainActivity"></activity>

    </application>

</manifest>